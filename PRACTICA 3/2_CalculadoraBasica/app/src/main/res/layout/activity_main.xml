<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_input"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingBottom="30dp"
        android:text="@string/btn_0"
        android:textAlignment="textEnd"
        style="@style/TextEstilo" />


    <TextView
        android:id="@+id/txt_ouput"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingBottom="30dp"
        android:text="@string/btn_equal"
        android:layout_below="@id/txt_input"
        style="@style/TextEstilo" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:layout_above="@id/gd_cal"/>


    <GridLayout
        android:id="@+id/gd_cal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_7"
            style="@style/BotonEstilo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/btn_7" />

        <Button
            android:id="@+id/btn_8"
            style="@style/BotonEstilo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/btn_8" />

        <Button
            android:id="@+id/btn_9"
            style="@style/BotonEstilo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/btn_9" />

        <Button
            android:id="@+id/btn_div"
            style="@style/BotonEstilo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/btn_divide" />

        <Button
            android:id="@+id/btn_4"
            style="@style/BotonEstilo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/btn_4" />

        <Button
            android:id="@+id/btn_5"
            style="@style/BotonEstilo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/btn_5" />

        <Button
            android:id="@+id/btn_6"
            style="@style/BotonEstilo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/btn_6" />

        <Button
            android:id="@+id/btn_mul"
            style="@style/BotonEstilo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/btn_multiply" />

        <Button
            android:id="@+id/btn_1"
            style="@style/BotonEstilo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/btn_1" />

        <Button
            android:id="@+id/btn_2"
            style="@style/BotonEstilo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/btn_2" />

        <Button
            android:id="@+id/btn_3"
            style="@style/BotonEstilo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/btn_3" />

        <Button
            android:id="@+id/btn_res"
            style="@style/BotonEstilo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/btn_subtract" />

        <Button
            android:id="@+id/btn_0"
            style="@style/BotonEstilo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_0" />


        <Button
            android:id="@+id/btn_equal"
            style="@style/BotonEstilo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:text="@string/btn_equal" />

        <Button
            android:id="@+id/btn_sum"
            style="@style/BotonEstilo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_add" />

    </GridLayout>

</RelativeLayout>